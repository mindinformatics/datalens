    $cursor->limit( 500 );
    //$total = (string)$cursor->count(); //To find total number of documents
    //dsm($total);
    //$cursor->limit( 5 );

     //Access query results
     $result = array();
     $filenames = array();
     $i = 0;

     foreach ($cursor as $doc) {
       //var_dump($doc);
       $result[$i]['Study'] = $doc['Study'];
       $result[$i]['BrainRegion'] = $doc['BrainRegion'];
       $result[$i]['parent'] = $doc['BrainRegion'];
       $result[$i]['DataType'] = $doc['DataType'];
       $result[$i]['Perturbation'] = $doc['Perturbation'];

       $result[$i]['Mouse_Ortholog'] = $doc['MouseGene'];
