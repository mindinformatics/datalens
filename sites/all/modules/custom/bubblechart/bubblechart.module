    // Filter on genes and p-value
    //$query = array("GeneSymbol" => array('$in' => $gene_list));
    //Mongo on server is version 2.6.12 and p-values in scientific notation were being stored as string
    // Fixed by finding p-value that are string and updating to double

    //var_dump($gene_list);
    //var_dump($species[0]);
    if ($species[0] == "human") {
      $query = array( '$and' => array( array("HumanGene" => array('$in' => $gene_list)),
             array('PValue' => array('$lt' => (float)$pval) ) ) );
    }

    if ($species[0] == "mouse") {
       $query = array( '$and' => array( array("MouseGene" => array('$in' => $gene_list)),
             array('PValue' => array('$lt' => (float)$pval) ) ) );
    }


    //ProbeID,adjPValue,PValue,t,B,logFC,MouseGene,GeneTitle,Filename,BrainRegion,Perturbation,DataType,Group,Study,HumanGene

    $cursor = $coll->find($query);
    $cursor->timeout(-1);
