//return $data;

  $analysis = preg_replace('/analysis in (\d+) +.*/', '$1', $filter);
  $chr      = preg_replace('/.*chromosome in (\d+) +.*/', '$1', $filter);
  $start    = preg_replace('/.*position ge (\d+) +.*/', '$1', $filter);
  $end      = preg_replace('/.*position le (\d+)/', '$1', $filter);

	// return array('filter_string' => $filter,
// 							'analysis' => $analysis,
// 							'chr' => $chr,
// 							'start' => $start,
// 							'end' => $end,
